@using NBL.Models.EntityModels.Deliveries
@using NBL.Models.Enums
@model NBL.Models.ViewModels.Orders.ViewOrder
@{

    var aClient = Model.Client;
}

<div class="row">

    <div class="col-md-4">

        <section>
           
            <img src="~/@(aClient.ClientImage?? "Images/User.jpg")" height="120" width="100" style="float:left;margin-right:20px" title="@aClient.ClientName" />
            <span>
                @Html.Raw(aClient.GetMailingAddress())
            </span>

        </section>


    </div>
    <div class="col-md-4">
        Outstanding: @aClient.Outstanding<br/>
        Credit Limit: @aClient.CreditLimit<br/>
        Max Credit Days:@aClient.MaxCreditDay<br/>
    </div>
    <div class="col-md-4">
        Order Slip No :<i>@Model.OrderSlipNo</i><br />
        Order Date : <i>@Model.SysDate.ToString("D")</i><br/>
        Order Status : <strong style="color: green">@Enum.GetName(typeof(OrderStatus), Model.Status)</strong>
       @if (Model.Status == 3 || Model.Status == 4)
                        {
                            <p>  Delivery Date :<strong style="color: green">@(Model.DeliveryDateTime?.ToString("f"))</strong>
        </p>
                        }<br/>

       
    </div>
</div>
<hr />
