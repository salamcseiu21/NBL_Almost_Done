
@model IEnumerable<NBL.Models.EntityModels.Suppliers.Supplier>
@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}
<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Supplier List</div>
        <div class="panel panel-body">
            <table id="table_supplier_list" class="display table table-bordered table-responsive" style="border: 1px solid black;width: 100%">


                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Company Name</th>
                    <th>Contact Person</th>
                    <th>Address</th>
                    <th>City</th>
                </tr>
                </thead>
                <tbody>

                @foreach (var item in Model)
                {
                    i++;
                    <tr>

                        <td>@i</td>
                        <td>@item.CompanyName</td>
                        <td>@item.ContactPersonName</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                    </tr>
                }

                </tbody>
                <tfoot>
                <tr>
                    <th>S.N</th>
                    <th>Company Name</th>
                    <th>Contact Person</th>
                    <th>Address</th>
                    <th>City</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
  

</section>


<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

<script>

        $('#table_supplier_list').DataTable({
            "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]]
        });

</script>

