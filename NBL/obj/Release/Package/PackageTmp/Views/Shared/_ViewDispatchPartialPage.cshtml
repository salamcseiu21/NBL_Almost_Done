@model IEnumerable<NBL.Models.ViewModels.Deliveries.ViewDispatchModel>
@{
    var i = 0;
}
<section class="content">

    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Despatch List</div>
        <div class="panel panel-body">
            <table id="tbl_dispatch_list" class="display table-bordered table-responsive" style="border: 1px solid;width: 100%">
                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Despatch Ref</th>
                    <th class="text-right">Quantity</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Despatch By</th>
                    <th class="text-center">Print Chalan</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.DispatchRef</td>
                        <td class="text-right">@item.Quantity</td>
                        <td class="text-center">@item.DispatchDate.ToString("dd-MMMM-yyyy")</td>
                        <td class="text-center">@item.DispatchBy</td>
                  
                        <td class="text-center">
                            @*<button><i class="fa fa-print"></i> Chalan</button>*@
                            @Html.ActionLink(" Barcode", "DispatchedBarCodeList","Delivery", new { dispatchId = item.DispatchId }, new { target = "_blank", @class = "fa fa-print" }) |
                            @Html.ActionLink(" Challan", "Chalan","Delivery", new { dispatchId = item.DispatchId}, new {target = "_blank", @class = "fa fa-print"})
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <th>S.N</th>
                    <th>Despatch Ref</th>
                    <th class="text-right">Quantity</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Despatch By</th>
                    <th class="text-center">Print Chalan</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
 
</section>
