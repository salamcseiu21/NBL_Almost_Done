@model IEnumerable<NBL.Models.EntityModels.Returns.ReturnModel>
@{
    ViewBag.Title = "View All Sales Return List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green">Sales Return List</h3>
    <table class="display table-bordered" style="border: 1px solid" id="tbl_Sales_Return_list">
        <thead>
        <tr>
            <th>Reference</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReturnRef</td>
                <td>@item.TotalQuantity</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <th>Reference</th>
            <th>Quantity</th>
        </tr>
        </tfoot>
    </table>
</section>
@section Scripts
{
    <script>
        $("#tbl_Sales_Return_list").DataTable();
    </script>
}

