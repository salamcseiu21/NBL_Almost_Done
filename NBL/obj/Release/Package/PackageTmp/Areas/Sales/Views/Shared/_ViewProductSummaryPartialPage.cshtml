  @model IEnumerable<NBL.Models.ViewModels.ViewProduct>
      
@{
    var i = 0;
}
<div class="table-responsive">
    <table id="table_product_list_in_stock" class="display table-bordered" style="border: 1px solid black;width: 100%">

        <thead>
        <tr>
            <th  colspan="2">Total Quantity :</th>
            <th class="text-left" colspan="4">@Model.Sum(n=>n.Quantity)</th>
       
        </tr>
        <tr>
            <th>S.N</th>
            <th class="text-center">Product Name</th>
            <th class="text-center">Segment </th>
            <th class="text-center">Account Code </th>
            <th class="text-right"> Quantity</th>
            <th class="text-center"> Action</th>
        </tr>
        </thead>

        <tbody>

        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.ProductName</td>
                <td class="text-center">@item.ProductCategoryName</td>
                <td class="text-center">@item.SubSubSubAccountCode</td>
                <td class="text-right">@item.Quantity</td>
                <td class="text-center">@Html.ActionLink(" Barcodes", "StockBarcodes", "Home",new {id=item.ProductId},new {@class="fa fa-eye"})</td>
            </tr>
        }

        </tbody>
        <tfoot>
        <tr>
            <th>S.N</th>
            <th class="text-center">Product Name</th>
            <th class="text-center">Segment </th>
            <th class="text-center">Account Code </th>
            <th class="text-right">Quantity</th>
            <th class="text-center"> Action</th>
        </tr>
        </tfoot>
    </table>

</div>

