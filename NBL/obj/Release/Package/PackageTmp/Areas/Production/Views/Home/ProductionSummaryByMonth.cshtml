
@model IEnumerable<NBL.Models.ViewModels.Productions.ProductionSummary>
@{
    ViewBag.Title = "Production Summary";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}

<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Production in <strong>@DateTime.Now.ToString("MMMM")</strong> Month</div>
        <div class="panel panel-body">
            <table id="tbl_Production_Summary" class="display table-bordered" style="border: 1px solid">
                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Product Name</th>
                    <th>Code</th>
                    <th class="text-center">Quantity</th>
          
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductCode</td>
                        <td  class="text-right">@item.Quantity</td>
              
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <th>S.N</th>
                    <th>Product Name</th>
                    <th>Code</th>
                    <th class="text-center">Quantity</th>

                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $("#tbl_Production_Summary").DataTable();
    </script>
}
