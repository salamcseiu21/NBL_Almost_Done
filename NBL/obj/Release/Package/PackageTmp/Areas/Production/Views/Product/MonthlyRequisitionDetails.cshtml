@model IEnumerable<NBL.Models.EntityModels.Requisitions.RequisitionItem>
@{
    ViewBag.Title = "Monthly Requisition Details";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green" >Monthly Requisition Details</h3>
    <table class="display" id="tbl_Monthly_Requisiton_Items">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Quantity</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item?.ProductName</td>
                <td>@item?.ProductCategoryName</td>
                <td>@item?.Quantity</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Quantity</th>

        </tr>
        </tfoot>
    </table>
</section>

@section Scripts
{
    <script>
        $("#tbl_Monthly_Requisiton_Items").DataTable();
    </script>
}
