@using NBL.Models.EntityModels.Products
@model IEnumerable<NBL.Models.ViewModels.ViewProduct>
@{
    ViewBag.Title = "Product Wise Total Stock";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var product = (Product) ViewBag.Product;
}

<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading">Branch Wish Stock of <i style="color: red;font-weight: bolder">@product.ProductName -(@product.ProductCategory.ProductCategoryName)</i></div>
        <div class="panel panel-body">
            <div class="col-md-offset-3 col-md-6">
                <table class="display table-bordered table-responsive" id="tbl_BranchWiseStock" style="border: 1px solid">
                    <thead>
                    <tr>
                        <th>Branch Name</th>
                        <th class="text-right">Stock Quantity</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BranchName</td>
                            <td class="text-right">@item.StockQuantity</td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th class="text-right">Total:</th>
                        <th class="text-right">@Model.Sum(n=>n.StockQuantity)</th>
                    </tr>
                    <tr>
                        <th>Branch Name</th>
                        <th class="text-right">Stock Quantity</th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            @Html.ActionLink("Back to List","TotalStock","Home",new {area="Corporate"},new {@class="btn btn-danger"})
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
       
    </div>
</section>

@section Scripts
{
    <script>
        $("#tbl_BranchWiseStock").DataTable();
    </script>
}
