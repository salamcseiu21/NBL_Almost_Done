@model IEnumerable<NBL.Models.ViewModels.ViewProduct>
@{
    ViewBag.Title = "Total Receive";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green" style="font-weight:bold;font-size:20px;margin:0;padding:0;">Receive Product</h3>
   
    <div class="table-responsive">
        <table id="table_product_list_in_stock" class="display table-bordered" style="border:1px solid black">

            <thead>
            <tr>
                <th>Total Quantity :</th>
                <th class="text-left" colspan="3">@Model.Sum(n=>n.Quantity)</th>
       
            </tr>
            <tr>
                <th class="text-center">Product Name</th>
                <th class="text-center">Category </th>
                <th class="text-center">Account Code </th>
                <th class="text-center" style="width: 60px"> Quantity</th>
            </tr>
            </thead>

            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td class="text-center">@item.ProductCategoryName</td>
                    <td class="text-center">@item.SubSubSubAccountCode</td>
                    <td class="text-center">@item.Quantity</td>
                </tr>
            }

            </tbody>
            <tfoot>
            <tr>
                <th class="text-center">Product Name</th>

                <th class="text-center">Category </th>
                <th class="text-center">Account Code  </th>
                <th class="text-center">Quantity</th>
            </tr>
            </tfoot>
        </table>

    </div>

</section>

@section Scripts
{
    <script>

        $('#table_product_list_in_stock').DataTable({
            "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]]
        });

    </script>


}
