@using NBL.Models.ViewModels
@model NBL.Models.ViewModels.Summaries.SummaryModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var user = (ViewUser)Session["user"];
}
@if (!user.IsPasswordChangeRequired)
{
    <section class="content">
        <div class="box">

            <div class="box-body">

                <a class="btn btn-app" href="#">
                    <span class="badge bg-purple" style="font-size: 14px">@Model.Clients.Count()</span>
                    <i class="fa fa-users"></i> Client
                </a>
                <a class="btn btn-app" href="#">
                    <span class="badge bg-teal" style="font-size: 14px">@Model.Employees.Count()</span>
                    <i class="fa fa-users"></i> Employee
                </a>
                <a class="btn btn-app" href="#">
                    <span class="badge bg-yellow" style="font-size: 14px">@Model.Departments.Count()</span>
                    <i class="fa fa-building-o" aria-hidden="true"></i> Department
                </a>
                <a class="btn btn-app" href="#">
                    <span class="badge bg-teal" style="font-size: 14px">@Model.Regions.Count()</span>
                    <i class="fa fa-globe" aria-hidden="true"></i> Region
                </a>
                <a class="btn btn-app" href="#">
                    <span class="badge bg-yellow" style="font-size: 14px">@Model.Territories.Count()</span>
                    <i class="fa fa-globe" aria-hidden="true"></i> Teritory
                </a>
                <a class="btn btn-app" href="#">
                    <span class="badge bg-teal" style="font-size: 14px">@Model.Branches.Count()</span>
                    <i class="fa fa-home" aria-hidden="true"></i> Branch
                </a>
            </div>
            <!-- /.box-body -->
        </div>
    </section>
}