@using NBL.Models.ViewModels.Products

@{
    ViewBag.Title = "Product Status";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green">Product Status</h3>
   
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
              
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BarCode" class="control-label col-md-3">BarCode</label>
                        <div class="col-md-9">
                            <input type="text" name="BarCode" id="BarCode" class="form-control" autofocus required=""/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="btn btn-toolbar">
                            <input type="submit" value="Search" class="btn btn-info"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
              
        </div>
    }
    
    
    @if (TempData["T"] != null)
    {
       var m = (ViewProductLifeCycleModel)TempData["T"];
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Product Life Cycle</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="ProductName" class="control-label">Product Name :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="ProductName">@m.ProductName</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="ProductionDate" class="control-label">Production Date :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="ProductionDate">@m.ProductionDate.ToString("D")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="ComeTofactoryInventory" class="control-label">Come to Store :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="ComeTofactoryInventory">@m.ComeIntoInventory.ToString("D")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="LifeTime" class="control-label">Dispatch Date :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="LifeTime">@m.DispatchDate.ToString("D")</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="RemainingLife" class="control-label">Receive date :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="RemainingLife">@m.ReceiveDate</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="Age" class="control-label">Sale Date :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="Age">@m.SaleDate.ToString()</label>
                            </div>
                        </div>
                    </div>
                    

                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="LifeTime" class="control-label">Life Time :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="LifeTime">@m.LifeTime</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="Age" class="control-label">Product Age :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="Age">@m.Age</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5 text-right">
                                <label for="RemainingLife" class="control-label">Remaining Life :</label>
                            </div>
                            <div class="col-md-7">
                                <label id="RemainingLife">@m.RemainingLifeTime</label>
                            </div>
                        </div>
                    </div>

                </div>
            

            </div>
            <div class="panel-footer">
                <label>Product Status Heilight...</label>
            </div>
        </div>
    }

    
</section>

