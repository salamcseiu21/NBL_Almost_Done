@using NBL.Models.ViewModels.Products

@{
    ViewBag.Title = "Product Status";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green">Product Status</h3>
   
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
              
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BarCode" class="control-label col-md-3">BarCode</label>
                        <div class="col-md-9">
                            <input type="text" name="BarCode" id="BarCode" class="form-control" autofocus required=""/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="btn btn-toolbar">
                            <input type="submit" value="Search" class="btn btn-info"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
              
        </div>
    }
    
    
    @if (TempData["T"] != null)
    {
       var m = (ViewProductLifeCycleModel)TempData["T"];
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Product Life Cycle</h3>
            </div>
            <div class="panel-body">
                
                <table class="table table-responsive table-bordered">
                    <tr>
                        <td>Product Name :</td>
                        <td>@m.ProductName</td>
                    </tr>
                    <tr>
                        <td>Production Date :</td>
                        <td>@m.ProductionDate.ToString("D")</td>
                    </tr>
                    <tr>
                        <td>Come to Store :</td>
                        <td>@m.ComeIntoInventory.ToString("D")</td>
                    </tr>
                    <tr>
                        <td>Dispatch Date :</td>
                        <td>@m.DispatchDate.ToString("D")</td>
                    </tr>
                    <tr>
                        <td>Age :</td>
                        <td>@m.Age</td>
                    </tr>
                </table>

            </div>
            <div class="panel-footer">
                <label>Product Status Heilight...</label>
            </div>
        </div>
    }

    
</section>

