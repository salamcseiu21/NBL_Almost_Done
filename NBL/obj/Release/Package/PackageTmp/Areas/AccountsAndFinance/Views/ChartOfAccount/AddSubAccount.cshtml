@model NBL.Models.EntityModels.ChartOfAccounts.SubAccount
@{
    ViewBag.Title = "Add SubAccount";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

 
<div class="panel panel-info">
    <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Add Sub Account</div>
    <div class="panel panel-body">
            @using(Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountHeadCode, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(model=>model.AccountHeadCode, null, "--Select--", new { @class="form-control"})
                                @Html.ValidationMessageFor(model=>model.AccountHeadCode, "",new {@class="text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SubAccountName,new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SubAccountName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sub Account Name" } })
                                @Html.ValidationMessageFor(model=>model.SubAccountName, "",new {@class="text-danger"}) 
                            </div>
                        </div>
                        <div class="form-group">
                          
                            <div class="col-md-9 col-md-offset-3">
                              <input type="submit" class="btn btn-info"/>
                            </div>
                        </div>
                    </div>
                </div>   
            }
    </div>
</div>
