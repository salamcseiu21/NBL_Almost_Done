@model IEnumerable<NBL.Models.EntityModels.ChartOfAccounts.SubAccount>
@{
    ViewBag.Title = "Sub Account List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}

<section class="content">
    

    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Sub Account List</div>
        <div class="panel panel-body">
            <table id="tbl_sub_account_List" class="display table-bordered" style="border: 1px solid">
                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Account Code</th>
                    <th>Account Name</th>
                    <th>Account Type Code</th>
                    <th>Account Type</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.SubAccountCode</td>
                        <td>@item.SubAccountName</td>
                        <td>@item.AccountHeadCode</td>
                        <td>@item.AccountHeadName</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <th>S.N</th>
                    <th>Account Code</th>
                    <th>Account Name</th>
                    <th>Account Type Code</th>
                    <th>Account Type</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
 
</section>

@section Scripts
{
    <script>
        $("#tbl_sub_account_List").DataTable();
    </script>
}





