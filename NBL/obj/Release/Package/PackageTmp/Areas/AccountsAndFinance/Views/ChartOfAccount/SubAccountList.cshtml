@model IEnumerable<NBL.Models.EntityModels.ChartOfAccounts.SubAccount>
@{
    ViewBag.Title = "Sub Account List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}

<section class="content">
    <h3 class="text-center text-green">Sub Account List</h3>
    <table id="tbl_sub_account_List" class="display table-bordered" style="border: 1px solid">
        <thead>
        <tr>
            <th>S.N</th>
            <th>Account Code</th>
            <th>Account Name</th>
            <th>Account Head Code</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.SubAccountCode</td>
                <td>@item.SubAccountName</td>
                <td>@item.AccountHeadCode</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <th>S.N</th>
            <th>Account Code</th>
            <th>Account Name</th>
            <th>Account Head Code</th>
        </tr>
        </tfoot>
    </table>
</section>

@section Scripts
{
    <script>
        $("#tbl_sub_account_List").DataTable();
    </script>
}





