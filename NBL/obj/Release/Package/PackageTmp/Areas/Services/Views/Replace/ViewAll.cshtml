@model IEnumerable<NBL.Models.ViewModels.Replaces.ViewReplaceModel>
@{
    ViewBag.Title = "View All";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}

<section class="content">
    
    

    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Replace List</div>
        <div class="panel panel-body">
            <table id="tbl_replace_list" class="display table-bordered" style="border: 1px solid">
                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Ref no</th>
                    <th>Client Info</th>
                    <th class="text-center">Product Name</th>
                    <th class="text-center">Entry Date</th>
                    <th class="text-center">Remarks</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.ReceiveRef</td>
                        <td>@item.ClientName</td>
                        <td class="text-center">@item.ProductName</td>

                        <td class="text-center">@item.EntryDate.ToString("dd-MMMM-yyyy")</td>
                        <td class="text-right">@item.Remarks</td>
                        <td class="text-center">
                            @Html.ActionLink(" Print Challan", "PrintChallan", "Replace", new {id = item.ReceiveId, area = "services"}, new { target = "_blank", @class = "btn btn-info fa fa-print"}) |
                            @Html.ActionLink(" Edit", "Edit", "Replace", new {id = item.ReceiveId, area = "services"}, new {@class = "btn btn-primary fa fa-edit"}) |
                            @Html.ActionLink(" Cancel", "Cancel", "Replace", new {id = item.ReceiveId, area = "services"}, new {@class = "btn btn-danger fa fa-times"})
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <th>S.N</th>
                    <th>Ref no</th>
                    <th>Client Info</th>
                    <th class="text-center">Product Name</th>
                    <th class="text-center">Entry Date</th>
                    <th class="text-center">Remarks</th>
                    <th class="text-center">Action</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
     
</section>
@section Scripts
{
    <script>
        $("#tbl_replace_list").DataTable();
    </script>
}
