@model IEnumerable<NBL.Models.ViewModels.Services.ViewReceivedServiceProduct>
@{
    ViewBag.Title = "Return List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Service Battery List For Return</div>
        <div class="panel panel-body">
            <table id="tbl_Service_Products" class="display table-bordered" style="border: 1px solid">
                <thead>
                <tr>
                    <th>  Receive Ref</th>
                    <th>  Receive At</th>
                    <th>  Receive Date</th>
                    <th>  Product Name</th>
                    <th>  Barcode</th>
                    <th>  Client</th>
              
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ReceiveRef</td>
                        <td>@item.ReceiveByBranch</td>
                        <td>@item.ReceiveDatetime.ToString("dd-MMM-yyyy")</td>
                        <td>@item.ProductName - (@item.ProductCategoryName)</td>

                        <td>@item.Barcode</td>
                        <td>@item.ClientInfo</td>
               
                    </tr>
                }
                <tfoot>
                <tr>
                    <th>  Receive Ref</th>
                    <th>  Receive At</th>
                    <th>  Receive Date</th>
                    <th>  Product Name</th>
                    <th>  Barcode</th>
                    <th>  Client</th>
                
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
    
</section>
@section Scripts
{
    <script>
        $("#tbl_Service_Products").DataTable();
    </script>
}
