@model NBL.Models.ViewModels.Productions.ScanProductViewModel
@{
    ViewBag.Title = "Save Scrap Product";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section style="margin: 10px">

    <div class="col-md-8 col-md-offset-2" style="border: 1px solid;">

        <div class="form-horizontal">
            <h3 class="text-center text-green" style="font-weight: bold">Scan Scrap Product</h3>
            <div id="message" style="display:none;font-weight:bold;font-size:20px" class="text-center">
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ProductCode, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control", placeholder = "Always keep pointer here..!!", autofocus = "", onchange = "SaveScannedBarcodeToXmlFile(this)" })
                    @Html.ValidationMessageFor(m => m.ProductCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Total Scanned</label>
                <div class="col-md-9">
                    <label id="TotalScannedQty" class="control-label"></label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="button" id="btnSave" value="Save" class="btn btn-success" onclick="SaveScrapProductToScrapInventory()" />
                    <a class="btn btn-danger" href="~/services">Cancel</a>

                </div>
            </div>
        </div>
    </div>

    <div id="div_scanned_products">
    </div>
</section>
@section scripts{

    <script>
        function SaveScannedBarcodeToXmlFile(btnClicked) {
           // var $form = $(btnClicked).parents('form');
            var code = $("#ProductCode").val();
            $.ajax({
                type: "Post",
                url: RootUrl + 'services/scrap/AddProductToTempFile',
                data: { barcode: code },
                error: function (xhr, status, error) {
                    alert(error);
                },
                success: function (response) {
                    var result = response.Message;
                    //alert("Saved Successfully");
                    $('#message').html(response).fadeIn('slow');
                    $('#message').html(result).fadeIn('slow'); //also show a success message
                    $('#message').delay(700).fadeOut('slow');
                    loadAllScannedProducts();
                    $('#ProductCode').val("");
                }
            });
        }
    </script>
    <script>
        $(document).ready(function() {
            loadAllScannedProducts();

        });
    </script>

    <script>
        function SaveScrapProductToScrapInventory() {
            if (confirm("Are you sure to Save?")) {
                //$("#scanProductBarcodeForm").submit();
                $.ajax({
                    type: "Post",
                    url: RootUrl + 'services/scrap/SaveScrapProduct',
                    error: function (xhr, status, error) {
                        alert(error);
                    },
                    success: function (response) {
                        loadAllScannedProducts();
                    }
                });

            } else {
                return false;// if it's a link to prevent post
            }
        }


        function loadAllScannedProducts() {
            $.ajax({
                type: 'GET',
                url: RootUrl + "services/scrap/LoadScannedProducts",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $("#div_scanned_products").html(data);
                    var qty = $("#total_Scanned_qty").val();
                  if (qty > 0) {
                      $("#btnSave").removeAttr('disabled');
                      $("#TotalScannedQty").text(qty);
                  } else {
                      $("#btnSave").attr('disabled', true);
                      $("#TotalScannedQty").text(0);
                  }
                }
            });
        }
    </script>
}