@model IEnumerable<NBL.Models.EntityModels.ChartOfAccounts.AccountHead>
@{
    ViewBag.Title = "Account Head List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var i = 0;
}

<section class="content">
    <h3 class="text-center text-green">Account Head List</h3>
    <table id="tbl_account_HeadList" class="display table-bordered" style="border: 1px solid">
        <thead>
            <tr>
                <th>S.N</th>
                <th>Account Name</th>
                <th>Account Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.AccountHeadName</td>
                    <td>@item.AccountHeadCode</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>S.N</th>
                <th>Account Name</th>
                <th>Account Code</th>
            </tr>
        </tfoot>
    </table>
</section>

@section Scripts
{
    <script>
        $("#tbl_account_HeadList").DataTable();
    </script>
}




