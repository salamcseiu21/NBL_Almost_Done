@using NBL.Models
@model NBL.Models.ViewModels.FinanceModels.ViewMoneyReceiptModel
    @{
        var client = Model.Client;
        var details = Model.ReceivableDetails;
       
    }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Money Receipt</title>
    <link rel='icon' href='~/Images/logo.png' type='image/x-icon' />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Assets/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Assets/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Assets/dist/css/AdminLTE.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        .block-border{
            display: block;
            padding: 5px;
            border: 1px solid red;
        }
        .inline-border{
            border: 1px solid green;
            border-radius: 25px;
            padding: 10px;
            text-transform: uppercase;
            font-weight: bolder
        } 
        u.dotted{
            border-bottom: 1px dashed #999;
            text-decoration: none; 
        }
    </style>
</head>
<body style="height: auto; width: auto; font-family: 'Times New Roman', Times, serif; font-size: 16px; padding: 25px" onload="window.print();">
<div class="wrapper">
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        @Html.Partial("_PrintHeaderPartialPage")

        <h3 class="text-center text-green headingStyle">
            <span class="inline-border"> Money Receipt</span>

        </h3><br/>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <strong>M.R.No.:</strong>@details.ReceiveableNo.ToString("D")
            </div>

            <!-- /.col -->
            <div class="col-xs-6 text-right">
                <strong>Date :</strong> @details.ActiveDate.ToString("dd-MMM-yyyy")
            </div>
            <!-- /.col -->
        </div>

        <p style="line-height: 1.6;">
            Received with thanks from Mr./Mrs./Messrs <strong> <i><u class="dotted">@client.CommercialName</u></i> </strong><br/>
            Address: <u class="dotted"><i>@client.Address</i></u>, Contact No: <u class="dotted">@client.Phone</u><br/><strong>Payment :</strong> @details.Amount.ToString("N2")<br/>
            INWORDS : @Generator.NumberToWords(Convert.ToInt32(details.Amount)) TAKA ONLY by <u class="dotted">@details.SourceBankName</u> Date : <u class="dotted">@details.ActiveDate.ToString("dd-MMM-yyyy")</u>,<br/> Cheque No: <u class="dotted">@details.ChequeNo</u>, Bank : <u class="dotted">@details.SourceBankName</u>, Account No : <u class="dotted">@details.BankAccountNo</u><br/>
            On accounts of Battery sales.
        </p>
        <div class="row" style="margin-top: 50px">
            <!-- accepted payments column -->
            <div class="col-xs-6 text-center">
                <p style="margin: 0; padding: 0;"> ................................................</p>
                Coustomer's Signature
            </div>

            <!-- /.col -->
            <div class="col-xs-6 text-center">
                <p style="margin: 0; padding: 0;"> ........................................................</p>
                For Navana Batteries Limited
            </div>
            <!-- /.col -->
        </div>
        <br/>
        <p>
            N.B. This money receipt is valid subject to realization of cheque/Dft./P.O./T.T
        </p>
        <hr style="padding: 0; margin: 0;"/>
        This is a Computer generated report.
    </section>
    <!-- /.content -->
</div>
<!-- ./wrapper -->
</body>
</html>
