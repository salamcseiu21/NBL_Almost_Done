                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return item;
                            }));
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            },
            select: function (e, i) {
                $("#SubSubSubAccountId").val(i.item.val);
                //alert(i.item.val);

                $("#PurposeCode").val('');
                var sssAId = i.item.val;
                var json = { subSubSubAccountId: sssAId };

                $.ajax({
                    type: "POST",
