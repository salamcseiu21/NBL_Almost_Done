
@model NBL.Models.EntityModels.Locations.Territory
@{
    ViewBag.Title = "Add New Territory";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content" style="margin:0;padding:0;">

    <h3 class="text-center text-green headingStyle">Add New Territory</h3>
    <hr />
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    @Html.LabelFor(m=>m.RegionId,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.DropDownListFor(m=>m.RegionId,null,"--Select--",new {@class="form-control"})
                        @Html.ValidationMessageFor(m=>m.RegionId,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.TerritoryName,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextBoxFor(m=>m.TerritoryName,new {@class="form-control", placeholder = "Enter Territory Name" })
                        @Html.ValidationMessageFor(m=>m.TerritoryName,"",new {@class="text-danger"})
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter region Name" ,rows="3",style="resize:none"})
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Alias, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Alias, new { @class = "form-control", placeholder = "Enter region Name" })
                        @Html.ValidationMessageFor(m => m.Alias, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2"></label>
                    <div class="col-md-10 text-right">
                        @Html.ActionLink("Back", "All", "Territory", new { area = "Editor" }, new { @class = "btn btn-info" })
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    }

</section>



