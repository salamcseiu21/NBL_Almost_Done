@model IEnumerable<NBL.Models.ViewModels.ViewProduct>
@{
    ViewBag.Title = "Total Receive";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading">
            <h3 class="text-green" style="font-weight:bold;font-size:20px;margin:0;padding:0;">Received Product</h3>
        </div>
        <div class="panel panel-body">



                <table id="table_product_list_in_stock" class="display table-bordered table-responsive" style="border: 1px solid black">

                    <thead>
                   
                    <tr>
                        <th class="text-center">Product Name</th>
                        <th class="text-center">Category </th>
                        <th class="text-center">Account Code </th>
                        <th class="text-center" style="width: 60px"> Quantity</th>
                    </tr>
                    </thead>

                    <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.ProductCategoryName</td>
                            <td class="text-center">@item.SubSubSubAccountCode</td>
                            <td class="text-right">@item.Quantity</td>
                        </tr>
                    }

                    </tbody>
                    <tfoot>
                    <tr>
                        <th colspan="3" class="text-right">Total Quantity :</th>
                        <th class="text-right">@Model.Sum(n => n.Quantity)</th>

                    </tr>
                    <tr>
                        <th class="text-center">Product Name</th>

                        <th class="text-center">Category </th>
                        <th class="text-center">Account Code </th>
                        <th class="text-center">Quantity</th>
                    </tr>
                    </tfoot>
                </table>

            </div>
        </div>

</section>

@section Scripts
{
    <script>

        $('#table_product_list_in_stock').DataTable({
            "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]]
        });

    </script>


}
