@model IEnumerable<NBL.Models.ViewModels.Productions.ProductionSummary>
@{
    ViewBag.Title = "Production Summary";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green">Production Summary</h3>
    <table id="tbl_Production_Summary" class="display table-bordered" style="border: 1px solid">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Code</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Scan Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductCode</td>
                <td  class="text-right">@item.Quantity</td>
                <td class="text-center">@item.CameToStoreDate.ToString("dd-MMMM-yyyy")</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <th>Product Name</th>
            <th>Code</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Scan Date</th>
        </tr>
        </tfoot>
    </table>
</section>

@section Scripts
{
    <script>
        $("#tbl_Production_Summary").DataTable();
    </script>
}
