@using NBL.Models.ViewModels
@model NBL.Models.ViewModels.Summaries.SummaryModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var user = (ViewUser)Session["user"];

}
@if(!user.IsPasswordChangeRequired)
{ 
<!-- Info boxes -->
<section class="content">
  
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-weight: bolder;font-size:22px">Stock Product</div>
        <div class="panel panel-body">
            @Html.Partial("_ViewProductSummaryPartialPage",Model.Products)
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-weight: bolder;font-size: 22px">Order Report</div>
        <div class="panel panel-body">
            @Html.Partial("_ViewSalesReportChartPartialPage", Model.TotalOrder)
        </div>
    </div>
   
</section>
@section Scripts{
    
    <script type="text/javascript">
        var timeout = setTimeout("location.reload(true);", 60000);
        function resetTimeout() {
            clearTimeout(timeout);
            timeout = setTimeout("location.reload(true);", 60000);
        }
    </script>
<script>

        $('#table_product_list_in_stock').DataTable({
            "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]],
            responsive: true
        });

</script>

}
}


