
@{
    ViewBag.Title = "Receive Return Rejected Product";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <div class="panel panel-info">
        <div class="panel panel-heading">Receive Return Rejected Product</div>
        <div class="panel panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="col-md-6 col-md-offset-3">
                        @if (TempData["RejectResult"] != null)
                        {
                            <span class="text-center">@TempData["RejectResult"]</span>
                        }
                        <div class="form-group">
                            <label class="control-label">Barcode/Batchcode</label>
                            <input type="text" name="Barcode" class="form-control" required maxlength="13" placeholder="Type or scan product barcode/batch code.."/>
                        </div>
                        <div class="form-group">
                            @Html.ActionLink("Back", "Home", "Home", new {area = "Sales"}, new {@class = "btn btn-danger"})
                            <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

