@using NBL.Models.Enums
@using NBL.Models.ViewModels
@{
    var user = (ViewUser)Session["user"];
}
@*Sales common Menu*@
@Html.Partial("_CommonMenuPartialPage")
<li class="treeview">
    <a href="#">
        <i class="fa fa-print"></i>
        <span>Chalan/Invoice</span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <ul class="treeview-menu">
        <li>@Html.ActionLink(" Delivered Orders", "DeleveredOrders", "Delivery", new {area = "Sales"}, new {@class = "fa fa-list", style = "font-weight: bolder;"})</li>
    </ul>
</li>
<li class="treeview">
    <a href="#">
        <i class="fa fa-eye"></i>
        <span>Store</span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <ul class="treeview-menu">
       
        <li>@Html.ActionLink(" Total Receive", "TotalReceive", "Product", new { area = "Sales" }, new { @class = "fa fa-list", style = "font-weight: bolder" })</li>
        <li>@Html.ActionLink(" Total Delivery", "TotalDelivery", "Product", new { area = "Sales" }, new { @class = "fa fa-list", style = "font-weight: bolder" })</li>
        <li>@Html.ActionLink(" In Stock", "Stock", "Product", new { area = "Sales" }, new { @class = "fa fa-list", style = "font-weight: bolder" })</li>
    </ul>
</li>
@if (!user.Roles.Equals("DistributionManager"))
{
    <li class="treeview">
        <a href="#">
            <i class="fa fa-search"></i> <span>Search</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
            <li>@Html.ActionLink(" Search", "SearchClient", "Home", new {area = "Sales"}, new {@class = "fa fa-search", style = "font-weight: bolder"})</li>
           
        </ul>
    </li>
}



<li class="treeview">
    <a href="#">
        <i class="fa fa-search"></i>
        <span>Warranty Check</span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <ul class="treeview-menu">
        <li>
            @Html.ActionLink(" Check", "WarrantyCheck", "Home", new {area = "Sales"}, new {@class = "fa fa-eye", style = "font-weight: bolder"})
        </li>
    </ul>
</li>
<li class="treeview">
    <a href="#">
        <i class="fa fa-eye"></i>
        <span>View/Show</span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <ul class="treeview-menu">
            
        @if (user.Roles.Equals("DistributionManager"))
        {
            <li>@Html.ActionLink(" Branch List", "ViewBranch", "Home", new {area = "Sales"}, new {@class = "fa fa-list", style = "font-weight: bolder"})</li>
        }
        else
        {
            <li>@Html.ActionLink(" Clients", "All", "Client", new {area = "Sales"}, new {@class = "fa fa-list", style = "font-weight: bolder"})</li>
            <li>@Html.ActionLink(" Branch List", "ViewBranch", "Home", new {area = "Sales"}, new {@class = "fa fa-list", style = "font-weight: bolder"})</li>
        }
            
       
    </ul>
</li>
@Html.Partial("_MenuMyProfilePartialPage")