@model IEnumerable<NBL.Models.ViewModels.Productions.ScannedProduct>
<table id="table_scanned_products" class="display" style="border: 1px solid black">

    <caption class="text-center text-green" style="font-weight: bolder; font-size: 20px">Scanned Product List</caption>

    <thead>
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Quantity
            <input type="hidden" id="total_Scanned_qty" value="@Model.Count()"/>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GroupBy(n=>n.ProductName))
    {
        <tr>
            <td>@item.Key</td>
            <td>@item.First().CategoryName</td>
            <td>@item.Count()</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Quantity</th>

    </tr>
    </tfoot>
</table>
<script>
    $("#table_scanned_products").DataTable({
        lengthMenu: [[10, 30, 50, -1], [15, 30, 50, "All"]]
    });
</script>
