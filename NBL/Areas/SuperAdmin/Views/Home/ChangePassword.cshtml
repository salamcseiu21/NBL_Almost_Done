@model NBL.Models.EntityModels.Identities.User
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green">Change User Password</h3>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
           
               @using (Html.BeginForm())
               {
                   <div class="form-horizontal">
                       <div class="form-group">
                         
                           <label class="control-label col-md-3">UserId</label>
                           <div class="col-md-9">
                               @Html.DropDownListFor(model => model.UserId, null, "--Select--", new { @class = "form-control" })
                               @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                           </div>
                       </div>
                       
                       <div class="form-group">

                           <div class="col-md-9 col-md-offset-3">
                               <div class="row">
                                   <div class="col-md-6">

                                   </div>
                                   <div class="col-md-6 text-right">
                                       @Html.ActionLink("Back", "Home", "Home", new { area = "SuperAdmin" }, new { @class = "btn btn-danger" })
                                       <input type="submit" value="Change Password" class="btn btn-success" />
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               }

            </div>
      
    </div>
</section>

