@using NBL.Models.Enums
@model IEnumerable<NBL.Models.ViewModels.Orders.ViewOrder>
<table id="table_Order_list" class="display table table-bordered responsive" style="border: 1px solid black">

    <thead>
    <tr>
        <th>Order Slip No</th>
        <th class="text-center">Order Date</th>
        <th class="text-center">Status</th>
        <th class="text-right">Amount (&#2547;)</th>
        <th class="text-right">Vat (&#2547;)</th>
        <th class="text-right">Discount (&#2547;)</th>
        
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>  @item.OrderSlipNo</td>
            <td>  @item.OrderDate.Date.ToString("dd-MMM-yyyy")</td>
            <td>  @Enum.GetName(typeof(OrderStatus), item.Status)</td>
            <td>  @item.Amounts</td>
            <td>  @item.Vat</td>
            <td>  @item.Discount</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Order Slip No</th>
        <th class="text-center">Order Date</th>
        <th class="text-center">Status</th>
        <th class="text-right">Amount (&#2547;)</th>
        <th class="text-right">Vat (&#2547;)</th>
        <th class="text-right">Discount (&#2547;)</th>
       
    </tr>
    </tfoot>
</table>
<script>
    $("#table_Order_list").DataTable();
</script>