
@model IEnumerable<NBL.Models.EntityModels.Locations.Territory>
@{
    ViewBag.Title = "Territory List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
   
}
<section class="content">

    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Territory List</div>
        <div class="panel panel-body">
            <table id="table_territory_list" class="display table table-bordered table-responsive" style="border: 1px solid black;width: 100%">


                <thead>
                <tr>
                    <th width="20%">Territory Name</th>
                    <th>Description</th>

                </tr>
                </thead>

                <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <h4 style="font-weight:bolder;color:green;">@item.TerritoryName</h4>

                        </td>
                        <td>
                            @(item.Description?? "N/A")

                        </td>

                    </tr>
                }

                </tbody>
                <tfoot>
                <tr>
                    <th>Territory Name</th>
                    <th>Description</th>

                </tr>
                </tfoot>
            </table>
        </div>
    </div>
   

</section>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

<script>

    $('#table_territory_list').DataTable({
            "lengthMenu": [[5,10, 20, 30, -1], [5,10, 20, 30, "All"]]
        });

</script>