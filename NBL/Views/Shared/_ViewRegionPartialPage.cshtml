
@model IEnumerable<NBL.Models.EntityModels.Locations.Region>
@{
    ViewBag.Title = "Region List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section class="content"> 
    <div class="panel panel-info">
        <div class="panel panel-heading" style="font-size: 22px;font-weight: bolder">Region List</div>
        <div class="panel panel-body">
            <table id="table_region_list" class="display table table-bordered table-responsive" style="border: 1px solid black;width: 100%">


                <thead>
                <tr>
                    <th>Region Name</th>
                    <th>Territory List</th>
                </tr>
                </thead>

                <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td width="20%">
                  
                            <h4 style="font-weight:bolder;color:green;">@item.RegionName</h4>
                        </td>
                        <td>
                            <ol>
                                @foreach (var t in item.Territories)
                                {
                                    <li>@t.TerritoryName</li>
                                }
                            </ol>

                        </td>
                    </tr>
                }

                </tbody>
                <tfoot>
                <tr>
                    <th>Region Name</th>
                    <th>Territory List</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
  
</section>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

<script>

    $('#table_region_list').DataTable({
            "lengthMenu": [[15, 25, 50, -1], [15, 25, 50, "All"]]
        });

</script>
