
@model IEnumerable<NBL.Models.ViewModels.Replaces.ReplaceReport>
@{
    var i = 0;
}
<table id="tbl_replace_list" class="display table-bordered" style="border: 1px solid">
    <thead>
    <tr>
        <th>S.N</th>
        <th>Reference</th>
        <th class="text-center">Entry Date</th>
        <th class="text-center">Delivery Date</th>
        <th>Client Name</th>
        <th>Product Name</th>
        <th class="text-right">Quantity</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>@item.TransactionRef</td>

            <td class="text-center">@item.EntryDateTime.ToString("dd-MMMM-yyyy")</td>
            <td class="text-center">@item.DeliveryDateTime.ToString("dd-MMMM-yyyy")</td>
            <td>@item.ClientName</td>
            <td>@item.ProductName</td>
            <td class="text-right">@item.Quantity</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>-</th>
        <th>-</th>
        <th>-</th>
        <th>-</th>
        <th>-</th>
        <th>Total</th>
        <th class="text-right">@Model.ToList().Count</th>
    </tr>
    <tr>
        <th>S.N</th>
        <th>Reference</th>
        <th class="text-center">Entry Date</th>
        <th class="text-center">Delivery Date</th>
        <th>Client Name</th>
        <th>Product Name</th>
        <th class="text-right">Quantity</th>
    </tr>
    </tfoot>
</table>
<script>

    $('#tbl_replace_list').DataTable({
        "lengthMenu": [[15, 30,,50, -1], [15, 30,50, "All"]],
        "order": [[5, "desc"]],
        dom: 'Bfrtip',
        buttons: [
            {
                extend: 'excel',
                text: 'Download as Excel',
                title: 'Replace Summary',
                footer: true,
                exportOptions: {
                    columns: [0,1, 2,3,4,5,6]
                }
            },
            {
                extend: 'print',
                text: 'Print',
                footer: true,
                exportOptions: {
                    columns: [0, 1, 2, 3, 4, 5,6]
                },
                title: 'Replace Summary',
                customize: function (win) {
                    $(win.document.body)
                        .css('font-size', '10pt');

                    $(win.document.body).find('table')
                        .addClass('compact')
                        .css('font-size', 'inherit');
                }
            }
        ]
    });

</script>